<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:vellum="http://commcarehq.org/xforms/vellum">
	<h:head>
		<h:title>Register Case</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms" xmlns="http://openrosa.org/formdesigner/D318C6B9-4C0B-4860-8421-022C129B65C7" uiVersion="1" version="711" name="Register Case">
					<details>
						<site_name/>
						<site_location/>
					</details>
				<case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id=""><create><case_name/><owner_id/><case_type>geo_case</case_type></create><update><site_location/></update></case><orx:meta xmlns:cc="http://commcarehq.org/xforms"><orx:deviceID/><orx:timeStart/><orx:timeEnd/><orx:username/><orx:userID/><orx:instanceID/><cc:appVersion/><cc:location/></orx:meta></data>
			</instance><instance id="commcaresession" src="jr://instance/session"/><instance id="groups" src="jr://fixture/user-groups"/>
			<bind nodeset="/data/details"/>
			<bind nodeset="/data/details/site_name" type="xsd:string" required="true()"/>
			<bind nodeset="/data/details/site_location" type="geopoint" required="true()"/>
			<itext>
				<translation lang="en" default="">
					<text id="details-label">
						<value>Site Details</value>
					</text>
					<text id="site_name-label">
						<value>Enter a name for this case:</value>
					</text>
					<text id="site_location-label">
						<value>Capture the case location.</value>
					</text>
				</translation>
				<translation lang="hin">
					<text id="details-label">
						<value>Site Details</value>
					</text>
					<text id="site_name-label">
						<value>Enter a name for this case:</value>
					</text>
					<text id="site_location-label">
						<value>Capture the case location.</value>
					</text>
				</translation>
			</itext>
		<bind calculate="/data/meta/timeEnd" nodeset="/data/case/@date_modified" type="xsd:dateTime"/><bind calculate="/data/meta/userID" nodeset="/data/case/@user_id"/><setvalue event="xforms-ready" ref="/data/case/@case_id" value="instance('commcaresession')/session/data/case_id_new_geo_case_0"/><bind calculate="/data/details/site_name" nodeset="/data/case/create/case_name"/><setvalue event="xforms-ready" ref="/data/case/create/owner_id" value="instance('groups')/groups/group/@id"/><bind calculate="/data/details/site_location" nodeset="/data/case/update/site_location" relevant="count(/data/details/site_location) &gt; 0"/><setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/><setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/><bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/><setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/><bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/><setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/><setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/><setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/><setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/><orx:pollsensor event="xforms-ready" ref="/data/meta/location"/><bind nodeset="/data/meta/location" type="geopoint"/></model>
	</h:head>
	<h:body>
		<group ref="/data/details" appearance="field-list">
			<label ref="jr:itext('details-label')"/>
			<input ref="/data/details/site_name">
				<label ref="jr:itext('site_name-label')"/>
			</input>
			<input ref="/data/details/site_location">
				<label ref="jr:itext('site_location-label')"/>
			</input>
		</group>
	</h:body>
</h:html>